<div class="wrapper">
  <div class="side-bar">
    <%= render "side_bar" %>
  </div>
  <div class="parks-new-form">
  <h1>新規登録</h1>
  <%= form_with(model: @park, local:true) do |f| %>
    <div class="img-upload">
      <div>
        画像
        <span class="indispensable">必須</span>
      <div>
      <div class="click-upload">
      <p>
        クリックして写真をアップロード
      </p>
      <%= f.file_field :image %>
    </div>
    <div class="new-parks">
      <div class="weight-bold-text">
        場所名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :name, class:"park-text", placeholder:"地名（必須 20字まで）", maxlength:"20" %>
      <div class="park-address">
        住所
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :address, class:"park-address", placeholder:"住所" %>
    </div>
    <%= f.submit "登録する" %>
  <% end %>
</div>
</div>  
