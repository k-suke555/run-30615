<h2>ログイン画面</h2>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="field">
    <label>メールアドレス</label>
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
  </div>
  <div class="field">
    <label>パスワード</label>
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
