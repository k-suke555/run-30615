<h2>Log in</h2>

<%= form_with model: @user, url: new_registration_path, local: true do |f| %>

  <div class="field">
    <label>メールアドレス</label>
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="field">
    <label>パスワード</label>
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
  </div>


  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
