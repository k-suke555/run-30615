<h2>ユーザー登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", model: f.object %>

  <div class="field">
    <label>ニックネーム</label>
    <%= f.text_field :nickname, placeholder:"例）太郎", maxlength:"10", autofocus: true %>
  </div>

  <div class="field">
    <label>メールアドレス</label>
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="field">
    <label>パスワード</label>
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="field">
    <label>パスワード（確認用）</label>
    <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %>

